  @model LMS.Models.Leave
  @{
  
    Layout = "LayoutA";
} 
     <body>
        <html>
 
    <div class="container login-container" style="padding-left: 250px;">
        
            <div class="row">
                <div class="col-md-8 login-form-1">
                   
                    <div class="mb-3">
                    <form  method="post">
    <input type="hidden" asp-for="LeaveID">
                      <center> <h3>LEAVE DETAILS</h3></center>  
                        <div class="form-group">
                         
						        <label>Name :</label>
                                          <input type="hidden" asp-for="LeaveID" class="form-control required" placeholder="Enter Leave ID" tabindex="1" >

                                        <input type="hidden" asp-for="EmployeeID" class="form-control required" placeholder="Enter Employee ID" tabindex="1" >
                                        <input type="text" asp-for="Name" class="form-control required" placeholder="Enter Name" tabindex="2" readonly>
                        </div>
                        <div class="form-group">
                            <label>LeaveType:</label>
                            <input type="text" asp-for="LeaveType" class="form-control required" placeholder="Enter Leave type" tabindex="3" readonly>
                        </div>
                      
                        <div class="col-md-6">
                            <label>StartDate:</label>
                            <input type="text" asp-for="StartDate" class="form-control required" placeholder="Enter start date" tabindex="4" readonly>
                        </div>

                        <div class="col-md-6">
                            <label>EndDate:</label>
                            <input type="text" asp-for="EndDate" class="form-control required" placeholder="Enter End date" tabindex="5" readonly>
                        </div>
                         
                         
                         <div class="form-group">
                            <label>Description:</label>
                            <input type="text" asp-for="Description" class="form-control required" placeholder="Enter Description" tabindex="6" readonly>
                        </div>
                       <div  class="form-group">
                          <label>Leave Status : </label>
                         <select class="AcceptOrReject" name="AcceptOrReject" id="AcceptOrReject" tabindex="7" required>
                         <option value="Approved">Approve</option>
                        <option value="Rejected">Reject</option>
                     </select>                           
                         @Html.ValidationMessageFor(m => m.AcceptOrReject, "Make sure Leave is Approved or Rejected", new { @class = "text-danger"})

                </div>
                        

                        
                    <div class="card-footer">
                            <center>
                        <button class="btn btn-primary" type="submit">Confirm Now</button>
                        <a asp-action="AdminIndex" asp-controller="Login" class="btn btn-secondary">Cancel</a>
                            </center>
                    </div>   
				        
				                        </form>
                          </div>
                          </div >
                    
                </div>
            </div>
        </div>	<script type="text/javascript">
		</script>
    <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
      
</body>

 @inject IHttpContextAccessor context;

 <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

    <title>@ViewData["Title"]Leave Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS.styles.css" asp-append-version="true" />
</head>
 <header>
     <nav  class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div  class="container-fluid">
                <a style=" font-weight: bold; color: Red" class="navbar-brand" asp-area="" >Leave Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">About</a>
                         </li>
                        
                         <li style="list-style: none; " class="nav-item">
                        <div class="dropdown">
                            <button  class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                              Manage Leave
                            </button>
                             <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                              <li><a class="nav-link text-dark dropdown-item" asp-controller="LeaveManagement" asp-action="ToApply" >Apply</a></li>
                             <li><a class="nav-link text-dark dropdown-item" asp-controller="LeaveManagement" asp-action="ToviewE" >View </a></li>

  </ul>
                        </div>
                    </li>
                         
                    </ul>
                </div>
            </div>
                     <p class="text-black">@context.HttpContext.Session.GetString("Name")           Login Time:  @context.HttpContext.Request.Cookies["LastLogin"].ToString()</p>
                      <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">LogOut</a>
                    
                     @* <h4 style="text-decoration: none;" > @Html.ActionLink("LogOut", "Index", "Home", routeValues: new {returnUrl = "Url"},null)  @* to exclude html attribute *@
                    @*  <a href="/Home/Index?returnUrl=Url"></a></h4>
                             *@
                         
        </nav>
    </header><h1 style="color: rgb(237, 100, 200);">@ViewData["Msg"]</h1>
<div style="color: rgb(11, 135, 244);">
    This is a Web based Leave Management Application.
   
</div>

<style>
   footer {
  padding-right:40px;
  position: absolute;
  bottom: 1px; 
  background-color: blueviolet;
  width: 100%;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  line-height: 40px;
  border-top: 1px solid black;
  text-decoration: none;
  font-weight: bold;
  padding-left: 40px;
}

* {
  box-sizing: border-box;
}

/* Create three equal columns that floats next to each other */
.column {
  float: left;
  width: 33.33%;
  padding: 10px;
  /* Should be removed. Only for demonstration */
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}
.navbar{
    left: 0;
  background-color: blueviolet;
}

</style>
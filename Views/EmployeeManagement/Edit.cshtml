@model LMS.Models.Employee
@{
    Layout = "LayoutA";
 } 

 <form asp-action="Edit" asp-area="Employees" method="post">
    <input type="hidden" asp-for="EmployeeID">
        <div class="row">
            <div class="col-lg-12">
             
                <div class="form-group">
                             @Html.LabelFor(m => m.Name)
                             @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control", @placeholder = "Enter Name" })
                             @Html.ValidationMessageFor(m => m.Name)
                            
                         <div class="form-group">
                            <label>Age:</label>
                            <input type="number" asp-for="Age" class="form-control " placeholder="Enter Age" tabindex="2">
                             @Html.ValidationMessageFor(m => m.Age)
                        </div>
                         <div class="form-group">
                            <label>EmailId :</label>
                            <input type="text" asp-for="EmailId" class="form-control required" placeholder="Enter EmailId" tabindex="3">
                             @Html.ValidationMessageFor(m => m.EmailId)
                        </div>
                         <div class="form-group">
                            <label>Address :</label>
                            <input type="text" asp-for="Address" class="form-control required" placeholder="Enter Address" tabindex="4">
                             @Html.ValidationMessageFor(m => m.Address)
                        </div>
                         <div class="form-group">
                            <label>Password:</label>
                            <input type="text" asp-for="password" class="form-control required" placeholder="Enter Password" tabindex="5">
                             @Html.ValidationMessageFor(m => m.password)
                        </div>
                        <div class="form-group">
                            <label>Contact:</label>
                            <input type="text" asp-for="contact" class="form-control required" placeholder="Enter Contact" tabindex="6">
                             @Html.ValidationMessageFor(m => m.contact)
                        </div>
                        <div class="form-group">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div> 
                      <div class="card-footer">
                            <center>
                        <button class="btn btn-warning" type="submit">Update</button>
                        <a asp-action="Index" asp-controller="EmployeeManagement" class="btn btn-secondary">Cancel</a>
                            </center>
                    </div>  
            </div>
        </div>
    </form>